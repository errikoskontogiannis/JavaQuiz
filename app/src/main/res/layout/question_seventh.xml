<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.javaquiz.FirstQuestion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/question7Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question 7:"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/question7Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="What is the main function of any variable?"
            android:textSize="16sp"/>

        <RadioGroup
            android:id="@+id/question7RadioButtonGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/question7Answer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To Print Words on the Screen" />

            <RadioButton
                android:id="@+id/question7Answer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To Add Numbers Together" />

            <RadioButton
                android:id="@+id/question7Answer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To Keep Track of Data in the Memory of the Computer" />

            <RadioButton
                android:id="@+id/question7Answer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To Write Java Codes" />
        </RadioGroup>

        <Button
            android:id="@+id/nextButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Next"
            android:background="@color/colorAccent"/>

    </LinearLayout>

</ScrollView>
